<section class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 m10 offset-m1 ">
         <form>
          <!-- Collection of Hotels returns 2 params= :CustomerName & :CustomerID -->
          <%= select(:CustomerName, :CustomerID, @hotels.map{|h| [ h[1], h[0] ]}, {prompt: "Select a property"}, {class: "select-two select-two-style"}) %>

          <div class="row">
          <div class="col s12">
           <h6>Select Arrival Date</h6>
          </div>
          <div class="row">
          <% @arrDays.each do |day| %>
            <% if day == 'EveryDay' %>
              <div class="col s12 m3 ">
                <%= check_box_tag "selected_days[]", day, params[:selected_days] && params[:selected_days].include?(day), :id => day, :onclick=>"setAllDays()" %>
                <%= label_tag day.html_safe %>
              </div>
            <%else %>
              <div class="col s12 m3 ">
                <%= check_box_tag "selected_days[]", day, params[:selected_days] && params[:selected_days].include?(day), :id => day %>
                <%= label_tag day.html_safe %>
              </div>
            <% end %>
          <% end %>
          </div>

      
          </form>    
      </div>
    </div>
  </div>
</section>