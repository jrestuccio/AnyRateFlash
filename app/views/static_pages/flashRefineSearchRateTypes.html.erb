
<section class="container">
  <div class="section">
    <div class="card">
      <div class="card-content"> 
        <div class="row">
          <div class="col s12 m10 offset-m1 ">
            <form>
              <!-- Collection of Hotels returns 2 params= :CustomerName & :CustomerID -->
              <div class="row">
                <div class="col s12 m6">                 
                  <%= select(:RateTypeDescShort, :RateTypeID, @rateTypes.map{|r| [ r[1], r[0] ]}, {prompt: "Select a Rate Type"}, {class: "select-two select-two-style"}) %>
                </div>               
              </div>
              <div class="row">
                <div class="col s12">
                <h6>Select Arrival Date</h6>
                </div>
              </div>
              <div class="row">              
              </div>
              <div class="row">
                <div class="col s12 m6">
                </div>
                <div class="col s12 m6">                
                </div>
              </div>
              <div class="row">
                <div class="col s2 offset-s5">
                  <div class=" actions waves-effect waves-light center-align btn">
                    <%= submit_tag "Continue"%>
                  </div>
                </div>            
              </div>
            </form>   
          </div>
        </div>
      </div>
    </div>
  </div>
</section>